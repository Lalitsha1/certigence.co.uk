PORT=8822
NODE_ENV=production

# URLs
FRONTEND_URL=https://your-frontend.example
CORS_ORIGINS=https://your-frontend.example

# Mongo
MONGO_URI=mongodb+srv://user:pass@cluster/db

# SMTP (use your hosting provider mailbox in production)
# Option A: Host specific (recommended on Hostinger)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true

# Option B: Service (e.g., gmail). If you set SMTP_SERVICE, host/port are optional
# SMTP_SERVICE=gmail

SMTP_MAIL=no-reply@yourdomain.com
SMTP_PASSWORD=your-mailbox-or-app-password
SMTP_FROM=no-reply@yourdomain.com
APP_NAME=Your App Name

# JWT
JWT_SECRET_KEY=replace-with-strong-secret
JWT_EXPIRE=7d
COOKIE_EXPIRE=7

# Twilio (optional)
TWILIO_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
